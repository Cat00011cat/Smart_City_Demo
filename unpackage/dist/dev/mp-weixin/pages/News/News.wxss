.box {
	background: #FEFEFE;
	border-radius: 5px;
}
.scroll-x {
	display: flex;
	white-space: nowrap;
}
.title {
	padding: 0 30rpx;
	font-size: 18px;
}
/* 新闻内容 */
.bg {
	margin: 15rpx;
	border-radius: 5px;
	background: #FFFFFF;
	padding: 10px;
}
.titlea {
	font-size: 18px;
	font-weight: bold;
	/* 设置行距 */
	line-height: 30px;
}
.img {
	margin-top: 5px;
	width: 100%;
	height: 150px;
	border-radius: 5px;
}
.desc {
	margin-top: 5px;
	font-size: 16px;
	line-height: 30px;

	/*  */
	overflow: hidden;
	word-break: break-all;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.time {
	margin-top: 5px;
	font-size: 14px;
	color: #a6a6a6;
}
/* 标签选中变色 */
.itemTabSelect {
	color: #007AFF;
	font-size: 20px;
	font-weight: bold;
	border-bottom-width: 4px;
}

